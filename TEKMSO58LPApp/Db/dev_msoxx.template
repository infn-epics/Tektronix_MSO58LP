# Acquisition Control
# ============================================================
record(bo, "$(P):Acquire")
{
    field(DESC, "Enable/disable polling")
    field(PINI, "YES")
    field(VAL,  "1")
    field(ZNAM, "Stop")
    field(ONAM, "Run")
}

record(bi, "$(P):Acquire_RBV")
{
    field(DESC, "Polling status")
    field(INP,  "$(P):Acquire CP")
    field(ZNAM, "Stopped")
    field(ONAM, "Running")
}

record(bo, "$(P):Refresh")
{
    field(DESC, "Manual refresh of all channels")
    field(PINI, "NO")
    field(ZNAM, "Idle")
    field(ONAM, "Refresh")
    field(VAL, "0")
    field(HIGH, "1")
    field(FLNK, "$(P):refreshEvent_")
    field(DOL, "1")     # force 1 on processing
    field(OMSL, "supervisory")
    field(OUT, "$(P):Refresh.PROC")  # write to self for momentary behavior
}
record(event, "$(P):refreshEvent_")
{
    field(DESC, "Refresh event")
    field(SCAN, "Passive")
    field(VAL,"$(P):refreshEvent_")
    field(PINI,"YES")
    
}

record(bo, "$(P):DISABLE") 
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "0")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

